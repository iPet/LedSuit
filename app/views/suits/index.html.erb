<%- model_class = Suit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:mac_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:start_time) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @suits.each do |suit| %>
      <tr>
        <td><%= link_to suit.mac_id, suit_path(suit.mac_id) %></td>
        <td><%= suit.created_at %></td>
        <td><%= suit.start_time %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_suit_path(suit.mac_id), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.setup', :default => t("Setup")),
                      suit_path(suit.mac_id), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      suit_path(suit.mac_id),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_suit_path,
            :class => 'btn btn-primary' %>
