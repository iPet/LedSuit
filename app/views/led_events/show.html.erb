<%- model_class = LedEvent -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:color) %>:</strong></dt>
  <dd><%= @led_event.color %></dd>
  <dt><strong><%= model_class.human_attribute_name(:blink) %>:</strong></dt>
  <dd><%= @led_event.blink %></dd>
  <dt><strong><%= model_class.human_attribute_name(:blink_delay) %>:</strong></dt>
  <dd><%= @led_event.blink_delay %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wave) %>:</strong></dt>
  <dd><%= @led_event.wave %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wave_repeat) %>:</strong></dt>
  <dd><%= @led_event.wave_repeat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_time) %>:</strong></dt>
  <dd><%= @led_event.start_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_time) %>:</strong></dt>
  <dd><%= @led_event.end_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:scenario_id) %>:</strong></dt>
  <dd><%= @led_event.scenario_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:part_id) %>:</strong></dt>
  <dd><%= @led_event.part_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              led_events_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_led_event_path(@led_event), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              led_event_path(@led_event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
